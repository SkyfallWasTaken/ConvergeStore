<% cache @product do %>
  <h1><%= @product.name %></h1>
  <%= @product.description %>
<% end %>

<%= image_tag @product.image if @product.image.attached? %>

<%= link_to "Back", products_path %>

<% if authenticated? %>
  <%= link_to "Edit", edit_product_path(@product) %>
  <%= button_to "Delete product", @product, method: :delete, data: { turbo_confirm: "Sure?" } %>
<% end %>